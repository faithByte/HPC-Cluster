acl "acl" {
    {{ INTERNAL_NETWORK }};
    localhost;
};

options {
    directory "/var/cache/bind";
    version "SECRET";

    recursion yes;
    allow-query { acl; };
    allow-transfer { none; };

    forwarders {
        8.8.8.8;
        8.8.4.4;
    };

    dnssec-validation auto;

    listen-on { any; };
    listen-on-v6 { any; };
};