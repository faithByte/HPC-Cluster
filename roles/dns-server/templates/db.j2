;
; BIND data file for local loopback interface
;
$TTL	604800
@	IN	SOA	{{ inventory_hostname }}.{{ DOMAIN_NAME }}. root.{{ DOMAIN_NAME }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

@		IN	NS	{{ inventory_hostname }}.{{ DOMAIN_NAME }}.
@		IN	PTR	{{ DOMAIN_NAME }}.

{{ inventory_hostname }}	IN	A	{{ ansible_host }}